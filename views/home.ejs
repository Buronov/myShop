<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/main.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="frame">
        <div class="main_frame"> 
            <!-- left frame -->
            <div class="left_frame">
                <div class="left_1">
                    <div class="left_1-1">
                        <img src="https://i.ibb.co/18qmqxF/35-45-DSC-0077.jpg" width="156px" height="142px" alt="">
                    </div>
                    <div class="left_1-2">
                        <%=user.name%>
                    </div>
                    <div class="left_1-3">
                        <%=user.profession%>
                    </div>
                    <div class="left-icons">
                        <div class="icon">
                            <img src="icon/Vector.svg" class="icon-1">
                        </div>
                        <div class="icon">
                            <img src="icon/Vector-1.svg" class="icon-1">
                        </div>
                        <div class="icon">
                            <img src="icon/Vector-2.svg" class="icon-1">
                        </div>
                        <div class="icon">
                            <img src="icon/Vector-3.svg" class="icon-1">
                        </div>
                        <div class="icon">
                            <img src="icon/Vector-4.svg" class="icon-1">
                        </div>
                        <div class="icon"> 
                            <img src="icon/Vector-5.svg" class="icon-1">
                        </div>
                    </div>

                </div>
                <div class="marginer"></div>
                <div class="left_2">
                    <div class="left_2-1">
                        <div class="left_2-1-1">Age:</div>
                        <div class="left_2-1-2"><%=user.age%></div>
                    </div>
                    <div class="left_2-1">
                        <div class="left_2-1-3">Residence:</div>
                        <div class="left_2-1-4"><%=user.residence%></div>
                    </div>
                    <div class="left_2-1">
                        <div class="left_2-1-5">Freelance:</div>
                        <div class="left_2-1-6">Available</div>
                    </div>
                    <div class="left_2-1">
                        <div class="left_2-1-7">Address:</div>
                        <div class="left_2-1-8"><%=user.adress%></div>
                    </div>
                    
                </div>
                <div class="marginer"></div>
                <!-- LANGUAGES -->
                <div class="left_3">
                    <div class="languages">Languages</div>
                    <div class="bangla">
                        <div class="bangla-1"><%=user.languages[0]%></div>
                        <div class="bangla-2">100%</div>
                    </div>
                    <div class="lan-border">
                        <div class="percent-1"></div>
                    </div>
                    <div class="bangla">
                        <div class="bangla-1"><%=user.languages[1]%></div>
                        <div class="bangla-2">80%</div>
                    </div>
                    <div class="lan-border"><div class="percent-2"></div></div>
                    <div class="bangla">
                        <div class="bangla-1"><%=user.languages[2]%></div>
                        <div class="bangla-2">60%</div>
                    </div>
                    <div class="lan-border"><div class="percent-3"></div></div>
                    
                    
                </div>
                <!-- END LANGUAGES -->
                <div class="marginer"></div>
                <!-- SKILLS -->
                <div class="left_4">                    
                    <div class="languages">Skills</div>
                    <div class="bangla">
                        <div class="bangla-1"><%=user.skills[0]%></div>
                        <div class="bangla-2">90%</div>
                    </div>
                    <div class="lan-border">
                        <div class="percent-html"></div>
                    </div>
                    <div class="bangla">
                        <div class="bangla-1"><%=user.skills[1]%></div>
                        <div class="bangla-2">85%</div>
                    </div>
                    <div class="lan-border"><div class="percent-2"></div></div>
                    <div class="bangla">
                        <div class="bangla-1"><%=user.skills[2]%></div>
                        <div class="bangla-2">80%</div>
                    </div>
                    <div class="lan-border"><div class="percent-2"></div></div>
                    <div class="bangla">
                        <div class="bangla-1"><%=user.skills[3]%></div>
                        <div class="bangla-2">75%</div>
                    </div>
                    <div class="lan-border"><div class="percent-nodejs"></div></div>
                    <div class="bangla">
                        <div class="bangla-1"><%=user.skills[4]%></div>
                        <div class="bangla-2">85%</div>
                    </div>
                    <div class="lan-border"><div class="percent-2"></div></div>
                </div>
                <!-- END SKILLS -->
                <div class="marginer"></div>
                <!-- EXTRA SKILLS -->
                <div class="left_5">
                    <div class="ex-skills">Extra Skills</div>
                    <div class="ex-skill-text">    
                        <div class="border">
                            <div class="border-1"></div>
                            <div class="border-2"></div>
                        </div>
                        <div class="text"><%=user.extra_skills[0]%></div>
                    </div>
                    <div class="ex-skill-text">    
                        <div class="border">
                            <div class="border-1"></div>
                            <div class="border-2"></div>
                        </div>
                        <div class="text"><%=user.extra_skills[1]%></div>
                    </div>
                    <div class="ex-skill-text">    
                        <div class="border">
                            <div class="border-1"></div>
                            <div class="border-2"></div>
                        </div>
                        <div class="text"><%=user.extra_skills[2]%></div>
                    </div>
                    <div class="ex-skill-text">    
                        <div class="border">
                            <div class="border-1"></div>
                            <div class="border-2"></div>
                        </div>
                        <div class="text"><%=user.extra_skills[3]%></div>
                    </div>
                </div>
                <!-- END EXTRA SKILLS -->
                <div class="marginer"></div>
            </div>
            <!-- left frame -->
            <div class="midd_frame">
                <div class="midd_top">2.1</div>
                <div class="midd_bot">2.2</div>
            </div>
            <div class="right_frame">3</div>
        </div> 
    </div>
</body>

</html>    